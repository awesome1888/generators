{
    "name": "<%- package_name_full %>",
    "version": "0.0.0",
    "license": "MIT",
    "main": "build.cjs/index.js",
    "module": "build.esm/index.js",
    "typings": "build.cjs/index.d.ts",
    "files": [
        "build.esm/",
        "build.cjs/"
    ],
<% if (is_cli) { %>
    "bin": {
        "<%- command_name %>": "./build.cjs/index.js"
    },
<% } %>
    "scripts": {
<% if (is_ui) { %>
        "dev": "./script/dev.sh",
        "doc": "./script/doc.sh",
<% } %>
        "install-peers": "install-self-peers -- --ignore-scripts",
<% if (is_cli) { %>
        "start": "SOME_ENV_VAR=1 ts-node src/index.ts",
<% } %>
        "build": "rm -rf ./build/*; yarn run build:esm; yarn run build:cjs",
        "build:cjs": "rm -rf ./build.cjs/*; tsc -p ./tsconfig.build.cjs.json<% if (is_cli) { %>; chmod +x ./build.cjs/index.js<% } %>",
        "build:esm": "rm -rf ./build.esm/*; tsc -p ./tsconfig.build.esm.json",
        "build:watch": "tsc -w -p ./tsconfig.build.cjs.json",
        "test": "jest -c ./jest/config.js --passWithNoTests",
        "test:watch": "jest -c ./jest/config.js --watch",
        "lint": "eslint ./src --ext .js,.ts,.jsx,.tsx",
        "lint:fix": "eslint ./src --fix --ext .js,.ts,.jsx,.tsx",
        "release": "./script/release.sh"
    },
    "dependencies": {
    },
<% if (is_ui) { %>
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0",
        "styled-components": ">=5.0.0"
    },
<% } %>
<% if (is_not_monorepo) { %>
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
<% } %>
    "publishConfig": {
        "access": "public"
    }
}
