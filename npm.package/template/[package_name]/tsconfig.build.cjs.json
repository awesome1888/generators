{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./build.cjs/",
    "types": []
  },
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "build",
    "build:esm",
    "build:cjs",
    <% if (is_ui) { %>"**/**/*.test.tsx",<% } %>
    <% if (is_ui) { %>"**/**/*.story.tsx",<% } %>
    <% if (is_ui) { %>"**/**/*.story.ts",<% } %>
    <% if (is_ui) { %>"**/**/__story__/**",<% } %>,
    "**/**/__test__/**",
    "**/**/*.test.ts"
  ]
}
